import cv2

import numpy as np

# Farbschwelle für Grün definieren

lower_green = np.array([0, 150, 0])

upper_green = np.array([50, 255, 50])

# Kamera öffnen

cap = cv2.VideoCapture(0)

while True:

    # Einzelbild von der Kamera erfassen

    ret, frame = cap.read()

    # Bild im RGB-Farbraum konvertieren

    frame_rgb = cv2.cvtColor(frame, cv2.COLOR_BGR2RGB)

    # Farbschwelle anwenden, um grüne Objekte zu erkennen

    mask = cv2.inRange(frame_rgb, lower_green, upper_green)

    # Nur die erkannten Bereiche im Originalbild anzeigen

    result = cv2.bitwise_and(frame, frame, mask=mask)

    # Ergebnis anzeigen

    cv2.imshow('Color Detection', result)

    # Auf 'q' drücken, um die Schleife zu beenden

    if cv2.waitKey(1) & 0xFF == ord('q'):

        break

# Kamera freigeben und Fenster schließen

cap.release()

cv2.destroyAllWindows()

 
